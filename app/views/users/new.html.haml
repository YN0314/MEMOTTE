%h1 Sign up

.row
  .span
    =form_for(@user) do |f|

      =f.label :name
      =f.text_field :name

      %br
      =f.label :email
      =f.text_field :email

      %br
      =f.label :Administrator
      =f.radio_button :role, 1 
      =f.label :General
      =f.radio_button :role, 0

      %br
      =f.submit "Create my account", class: "btn btn-large btn-primary" 
