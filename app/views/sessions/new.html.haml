!!! 5
%html{lang: "ja"}
  %head
    %meta{charset: "UTF-8"}
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    :css
      #login_form {
        padding-top: 50px;
      }

  %body
    %section#login_form.container
      .row
        .col-md-6.col-md-offset-3
          = form_tag session_create_path do

            %legend Login

            = render "shared/alert"

            .form-group
              %label.control-label.sr-only E-Mail
              = email_field_tag :email, @email, class: "form-control", placeholder: "E-Mail", required: true

            .form-group
              %label.control-label.sr-only Password
              = password_field_tag :password, nil, class: "form-control", placeholder: "Password", required: true

            %button.btn.btn-primary{type: "submit"} Sign in

    = render "shared/footer"

